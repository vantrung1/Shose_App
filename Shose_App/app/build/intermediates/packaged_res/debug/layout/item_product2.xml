<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="4dp"
    android:layout_margin="10dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textTopic"
            android:text="BEST SELLER"
            android:textSize="16dp"
            android:textColor="@color/lavender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_product_name2"
            android:text="Nike Jordan"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/fonttext"
            android:textColor="@color/black"
            android:layout_below="@+id/textTopic"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/item_product_img2"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginStart="5dp"
            android:id="@+id/item_product_price2"
            android:text="200.000.00"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_below="@+id/item_product_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/item_product_img2"
            android:src="@drawable/product"
            android:layout_alignParentRight="true"
            android:layout_width="170dp"

            android:layout_height="100dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>