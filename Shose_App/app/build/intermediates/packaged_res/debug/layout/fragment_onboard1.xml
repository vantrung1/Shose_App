<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".Fragment.OnboardFragment1">
    <ImageView
        android:layout_marginTop="100dp"
        android:src="@drawable/onboard1"
        android:layout_width="375dp"
        android:layout_height="324dp"/>
    <TextView
        android:id="@+id/start_journ"
        android:layout_width="300dp"
        android:textSize="40dp"
        android:layout_height="wrap_content"
        android:text="Start Journey With Nike"
        android:fontFamily="@font/fonttext"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/smart_gorge"
        android:layout_width="322dp"
        android:layout_height="64dp"
        android:textSize="16dp"
        android:text="@string/smart_gorge"
        android:gravity="top"
        />

</LinearLayout>