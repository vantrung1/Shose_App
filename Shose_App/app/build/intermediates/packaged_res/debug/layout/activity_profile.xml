<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar_profile"
        android:layout_width="match_parent"
        android:elevation="8dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="143dp"
        android:src="@drawable/image_profile"
        app:civ_border_color="@color/black"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_profile" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/img_camera"
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="82dp"
        android:layout_marginTop="5dp"
        android:text="Your Name"
        android:textColor="#1A2530"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="176dp"
        android:src="@drawable/camera_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_image" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/fonttext"
            android:textColor="#1A2530"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            app:layout_constraintBottom_toBottomOf="@id/textView3"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="AlossonBecker@gmail.com"
            android:layout_marginStart="10dp"
            android:id="@+id/profile_email"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Điện Thoại"
            android:fontFamily="@font/fonttext"
            android:textColor="#1A2530"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            app:layout_constraintBottom_toBottomOf="@id/textView3"
            android:layout_width="match_parent"
            android:text="0339490213"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/profile_phone"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật Khẩu"
            android:fontFamily="@font/fonttext"
            android:textColor="#1A2530"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:drawableRight="@drawable/baseline_border_color_24"
            app:layout_constraintBottom_toBottomOf="@id/textView3"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:text="ádsadsadsadsad"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:id="@+id/profile_password"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>