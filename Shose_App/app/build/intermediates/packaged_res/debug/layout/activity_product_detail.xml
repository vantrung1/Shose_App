<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProductDetailActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar_detail"
        android:elevation="8dp"
        android:layout_alignParentTop="true"
        android:layout_height="?attr/actionBarSize"

        android:background="@color/background">
        <FrameLayout
            android:id="@+id/layoutGioHang_detail"
            android:layout_width="60dp"
            android:layout_gravity="right"
            android:layout_height="?attr/actionBarSize">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bag"/>
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView

        android:layout_above="@id/layoutBottom"
        android:layout_below="@id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/loading" />
            <LinearLayout
                android:paddingStart="20dp"
                android:layout_below="@id/img_detail"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/detailDesc"
                    android:text="BEST SELLER"
                    android:textSize="18dp"
                    android:textColor="@color/lavender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/detailname"
                    android:text="Nike Jordan"
                    android:textSize="24dp"
                    android:layout_marginTop="5dp"

                    android:fontFamily="@font/fonttext"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/detailSaleTop"
                        android:text="231203210"
                        android:textSize="22dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/fonttext"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/detailprice"
                        android:text="231203210"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"

                        android:fontFamily="@font/fonttext"
                        android:textColor="@color/xam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView

                    android:id="@+id/detailcontent"
                    android:text="dsaduhsafgsuagfuasgfsaugfsagfsiuafusaufsaiufg sfbusasausafuiasf"
                    android:textSize="16dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
                <TextView
                    android:text="Gallery"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fonttext"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="5dp"
                    android:id="@+id/recyImageDetail"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"/>
                <TextView

                    android:text="Size"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fonttext"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginEnd="20dp"
                    android:id="@+id/recySizeDetail"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:elevation="8dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/tv1"
            android:text="Price"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/tv1"
            android:text="23010230"
            android:fontFamily="@font/fonttext"
            android:textSize="18dp"
            android:id="@+id/detailsale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_addCart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/background_btn_dangnhap"
            android:elevation="3dp"
            android:text="Add To Cart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>