<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_item_my_cart"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <CheckBox
            android:layout_margin="5dp"
            android:id="@+id/checkbox_item_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/image_check_box" />

        <ImageView
            android:id="@+id/item_img_cart"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/product" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_txt_name_cart"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="top"
                android:lineSpacingExtra="-1sp"
                android:text="Nike Club Max"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/xam_nhe"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/item_txt_color_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phan loai: Den" />

                <TextView
                    android:id="@+id/item_txt_size_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/baseline_expand_more_24" />
            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_txt_price_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ2000"
                    android:textColor="@color/xam" />

                <TextView
                    android:id="@+id/item_txt_sale_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="đ2000"
                    android:textColor="@color/red"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_btnIMG_minus_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_minus_blue" />

                <TextView
                    android:id="@+id/item_txt_quantity_cart"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/item_btnIMG_plus_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_plus_blue" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

