<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="8dp"
    android:layout_margin="15dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:id="@+id/ratingavatar"
        android:layout_height="30dp"
        android:src="@drawable/image_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="nguyen van trung"
        android:id="@+id/ratingName"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@+id/ratingavatar"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressBackgroundTint="@color/xam_nhe"
        android:progressTint="@color/yellow"
        android:rating="5"
        android:scaleX="0.3"
        android:scaleY="0.3"
        android:secondaryProgressTint="@color/yellow"
        app:layout_constraintRight_toRightOf="@+id/ratingName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/ratingcontent"
        android:text="dasdsaiudsa"
        android:textSize="16dp"
        android:textColor="@color/black"

        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintLeft_toRightOf="@id/ratingavatar"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
         />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/ratingcontent"
        android:id="@+id/recyImageRating"

        android:layout_height="120dp"/>
    <TextView
        android:paddingTop="5dp"
        android:text="2023-05-14T10:13:41.000000Z"
        android:paddingStart="30dp"
        android:id="@+id/textViewcreateat"
        app:layout_constraintTop_toBottomOf="@id/recyImageRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>