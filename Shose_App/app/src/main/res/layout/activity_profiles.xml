<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_profiles"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="143dp"
        android:src="@drawable/image_profile"
        app:civ_border_color="@color/black"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_profiles" />

    <ImageView
        android:id="@+id/img_cameras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="176dp"
        android:src="@drawable/camera_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_cameras">

        <RelativeLayout
            android:id="@+id/relati_name"
            style="@style/RelactiveSettings_settingContainer"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="@+id/profile_image">

            <TextView
                style="@style/easySettings_textView_title"
                android:text="Tên" />

            <TextView
                android:id="@+id/tvTen"
                style="@style/easySettings_textView_title"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/image1"
                android:gravity="right"
                android:text="aaaaaa" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_chevron_right_24" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relati_address"
            style="@style/RelactiveSettings_settingContainer"
            android:layout_marginTop="1dp"
            android:visibility="gone">

            <TextView
                style="@style/easySettings_textView_title"
                android:text="Địa chỉ" />

            <TextView
                android:id="@+id/tvAddress"
                style="@style/easySettings_textView_title"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/image2"
                android:gravity="right"
                android:text=" aaaaa " />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_chevron_right_24" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relati_phone"
            style="@style/RelactiveSettings_settingContainer"
            android:layout_marginTop="1dp">

            <TextView
                style="@style/easySettings_textView_title"
                android:text="Số Điện Thoại" />

            <TextView
                android:id="@+id/tvPhoneNumber"
                style="@style/easySettings_textView_title"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/image3"
                android:gravity="right" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_chevron_right_24" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relati_email"
            style="@style/RelactiveSettings_settingContainer"
            android:layout_marginTop="1dp">

            <TextView
                style="@style/easySettings_textView_title"
                android:text="Email" />

            <TextView
                android:id="@+id/tvEmail"
                style="@style/easySettings_textView_title"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="  " />


        </RelativeLayout>

        <RelativeLayout
            style="@style/RelactiveSettings_settingContainer"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/tvChangePassword"
                style="@style/easySettings_textView_title"
                android:layout_toStartOf="@+id/image5"
                android:text="Đổi mật khẩu " />

            <ImageView
                android:id="@+id/image5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_chevron_right_24" />
        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
