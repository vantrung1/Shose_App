<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="14dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:layout_height="300dp">
    <RelativeLayout
        android:id="@+id/layuotItem"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <ImageView
            android:padding="10dp"
            android:src="@drawable/product"
            android:layout_centerHorizontal="true"
            android:id="@+id/item_product_image"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_height="150dp"/>
        <TextView
            android:id="@+id/textTopic"
            android:text="BEST SELLER"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/lavender"
            android:layout_below="@+id/item_product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_product_name"
            android:text="Nike Jordan"
            android:textSize="16dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/fonttext"
            android:textColor="@color/black"
            android:layout_below="@+id/textTopic"
            android:layout_width="150dp"
            android:layout_height="70dp"/>
        <TextView
            android:id="@+id/item_product_price"
            android:text="200.000.00"
            android:layout_marginStart="10dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_below="@id/item_product_name"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/itemclick"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:id="@+id/itemclcik"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="40dp"
            android:visibility="gone"
            android:id="@+id/itemClickFav"
            android:layout_height="40dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>