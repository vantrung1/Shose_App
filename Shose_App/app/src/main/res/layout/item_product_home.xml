<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layuotItem"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/product"
            android:layout_centerHorizontal="true"
            android:id="@+id/item_product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textTopic"
            android:text="BEST SELLER"
            android:textSize="14dp"
            android:textColor="@color/lavender"
            android:layout_below="@+id/item_product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_product_name"
            android:text="Nike Jordan"
            android:textSize="16dp"
            android:fontFamily="@font/fonttext"
            android:textColor="@color/black"
            android:layout_below="@+id/textTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_product_price"
            android:text="200.000.00"
            android:textSize="12dp"

            android:textColor="@color/black"
            android:layout_below="@+id/item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/itemclick"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/item_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>